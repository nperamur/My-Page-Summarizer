{
  "manifest_version": 3,
  "name": "My Page Summarizer",
  "description": "Summarize webpages with ease. Powered by Google Gemini. ",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "identity",
    "contextMenus",
    "scripting",
    "offscreen",
    "storage"
  ],
  "icons": {
    "128": "icons/icon-128.png",
    "36": "icons/icon-36.png"
  },
  "key": "",
  "action": {
    "default_title": "My Page Summarizer"
  },

  "web_accessible_resources": [
    {
      "resources": ["popup.html", "settings.html", "sign-in.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  }
}
